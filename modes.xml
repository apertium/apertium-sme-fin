<?xml version="1.0" encoding="UTF-8"?>
<modes>
  <mode name="fin-sme" install="yes">
    <pipeline>
      <program name="hfst-proc">
        <file name="fin-sme.automorf.hfst"/>
      </program>
      <program name="cg-proc -w">
        <file name="fin-sme.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="fin-sme.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="apertium-transfer">
        <file name="apertium-sme-fin.fin-sme.t1x"/>
        <file name="fin-sme.t1x.bin"/>
        <file name="fin-sme.autobil.bin"/>
      </program>
      <program name="hfst-proc $1">
        <file name="fin-sme.autogen.hfst"/>
      </program>
    </pipeline>
  </mode>

  <mode name="fin-sme-morph">
    <pipeline>
      <program name="hfst-proc">
        <file name="fin-sme.automorf.hfst"/>
      </program>
    </pipeline>
  </mode>

  <mode name="fin-sme-chunker">
    <pipeline>
      <program name="hfst-proc">
        <file name="fin-sme.automorf.hfst"/>
      </program>
      <program name="cg-proc -w">
        <file name="fin-sme.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="fin-sme.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="apertium-transfer">
        <file name="apertium-sme-fin.fin-sme.t1x"/>
        <file name="fin-sme.t1x.bin"/>
        <file name="fin-sme.autobil.bin"/>
      </program>
    </pipeline>
  </mode>
</modes>
